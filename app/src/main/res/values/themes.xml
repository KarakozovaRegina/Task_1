<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Task_1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Task_1" parent="Base.Theme.Task_1" />


    <style name = "TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">34sp</item>
        <item name="android:gravity">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name = "Numbers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name = "BottonRed">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/background_button_delete</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name = "BottonResult">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/background_button_result</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name = "BottonWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name = "BottonOperation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
    </style>

</resources>